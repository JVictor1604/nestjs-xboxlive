generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jogos {

  id                 String @id @default(uuid())
  title              String @unique
  coverimgUrl        String
  description        String
  year               Int
  imdbScore          Float  @map("imdb_score")
  trailerYouTubeUrl  String @map("trailer_youtube_url")
  gameplayYouTubeUrl String @map("gameplay_youtube_url")

  genres GameGenre[]

  profile GameProfiles[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("jogos")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  cpf      String  @unique
  isAdm    Boolean

  profiles Profiles[]


  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Genre {

  id     String @id @default(uuid())
  gender String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  jogos GameGenre[]

  @@map("genre")
}

model Profiles {

  id    String @id @default(uuid())
  title String @unique
  image String

  user   User   @relation(fields: [userId], references: [id])
  userId String


  jogos GameProfiles[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")


  @@map("profiles")
}

model GameGenre {

  id      String @id @default(uuid())
  jogos   Jogos  @relation(fields: [jogosId], references: [id])
  jogosId String @map("game_id")
  genre   Genre  @relation(fields: [genreId], references: [id])
  genreId String @map("genre_id")

  @@unique([jogosId, genreId])
  @@map("game_to_genre")
}

model GameProfiles {

  id        String   @id @default(uuid())
  jogos     Jogos    @relation(fields: [jogosId], references: [id])
  jogosId   String   @map("game_id")
  profile   Profiles @relation(fields: [profileId], references: [id])
  profileId String   @map("profile_id")
}
